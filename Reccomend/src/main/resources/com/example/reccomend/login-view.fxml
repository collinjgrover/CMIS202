<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.reccomend.LoginController">
   <children>
      <Label fx:id="welcomeLabel" layoutX="211.0" layoutY="66.0" text="Login / Signup to ReccomendFlix!" />
      <TextField fx:id="usernameBox" layoutX="226.0" layoutY="142.0" promptText="Enter username" />
      <TextField fx:id="passwordBox" layoutX="226.0" layoutY="200.0" promptText="Enter password" />
      <Button fx:id="loginButton" layoutX="274.0" layoutY="276.0" mnemonicParsing="false" onAction="#LoginController" text="Login" />
      <RadioButton fx:id="newUserButton" layoutX="425.0" layoutY="280.0" mnemonicParsing="false" text="New User? " />
   </children>
</AnchorPane>
